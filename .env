# Environment Mode (dev/prod)
APP_ENV="development"  # Change to production in production
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_SECRET_KEY="your_jwt_secret_key_here"
APP_ALLOWED_ORIGIN="https://i-tips.local, http://127.0.0.1:3000, http://localhost:3000, http://0.0.0.0:3000"
APP_CONTAINER="i-tips-backend"
APP_NETWORK="i-tips-network"
APP_LOG_PATH="/var/log/i-tips-backend.log"
APP_LOG_LEVEL="INFO"   

# Database Configuration (PostgreSQL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME="i_tips_db"
DB_USER="i_tips_user"
DB_PASSWORD="i_tips_password"
DB_CONTAINER="i-tips-db"
DB_VOLUME="i-tips-db-volume"

# Email Settings (if applicable for user registration or notifications)
SMTP_SERVER="smtp.yourmailserver.com"
SMTP_PORT=587
SENDER_EMAIL="noreply@yourdomain.com"
SMTP_PASSWORD="your_email_password"

# PG Admin Configuration
PGADMIN_DEFAULT_EMAIL="admin@i-tips.dev"
PGADMIN_DEFAULT_PASSWORD="admin@i-tips.dev"
PGADMIN_SERVER_PORT=8080
PGADMIN_CONTAINER="i-tips-pgadmin"
